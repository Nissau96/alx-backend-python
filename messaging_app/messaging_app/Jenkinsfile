pipeline {
    agent any
    tools {
        PythonInstallation 'Python-3.12'  // Must match the name in Global Tool Configuration
    }
    environment {
        PYTHON_VERSION = '3.12'
    }
    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/Nissau96/alx-backend-python.git',
                    branch: 'main',  // Explicitly specify the branch
                    credentialsId: 'github-creds'  // Use the configured GitHub credentials
            }
        }
        stage('Set Up Virtual Environment') {
            steps {
                dir('messaging_app') {
                    sh '''
                        ${TOOL_PYTHON} -m venv venv
                        . venv/bin/activate
                        pip3 install --upgrade pip
                    '''
                }
            }
        }
        stage('Install Dependencies') {
            steps {
                dir('messaging_app') {
                    sh '''
                        . venv/bin/activate
                        pip3 install -r requirements.txt  // Install dependencies from requirements.txt
                    '''
                }
            }
        }
        stage('Run Tests') {
            steps {
                dir('messaging_app') {
                    sh '''
                        . venv/bin/activate
                        pytest --junitxml=test_report.xml  // Run tests and generate report
                    '''
                }
            }
        }
    }
    post {
        always {
            junit 'messaging_app/test_report.xml'  // Publish the test report
            cleanWs()
        }
        success {
            echo 'Tests passed successfully!'
        }
        failure {
            echo 'Tests failed. Check the report.'
        }
    }
}