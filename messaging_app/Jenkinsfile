pipeline {
    agent any
    tools {
        // Define Python tool managed by ShiningPanda
        PythonInstallation 'Python-3.12' 
    }
    environment {
        PYTHON_VERSION = '3.12'
    }
    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/Nissau96/alx-backend-python.git',
                    branch: 'main',
                    credentialsId: 'github-creds'
            }
        }
        stage('Set Up Virtual Environment') {
            steps {
                dir('messaging_app') {
                    sh '''
                        python3 -m venv venv
                        . venv/bin/activate
                        pip install --upgrade pip
                    '''
                }
            }
        }
        stage('Install Dependencies') {
            steps {
                dir('messaging_app') {
                    sh '''
                        . venv/bin/activate
                        pip install -r requirements.txt
                    '''
                }
            }
        }
        stage('Run Tests') {
            steps {
                dir('messaging_app') {
                    sh '''
                        . venv/bin/activate
                        pytest --junitxml=test_report.xml
                    '''
                }
            }
        }
    }
    post {
        always {
            junit 'messaging_app/test_report.xml'
            cleanWs()
        }
        success {
            echo 'Tests passed successfully!'
        }
        failure {
            echo 'Tests failed. Check the report.'
        }
    }
}